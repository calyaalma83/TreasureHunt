<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a0e27"
    tools:context=".FinishActivity">

    <!-- Background Grid Effect -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="#1a1f3a" />

    <!-- Top Glow Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:background="#00ffff"
        android:alpha="0.8" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Trophy Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <!-- Trophy Icon with Glow -->
                <TextView
                    android:id="@+id/trophyIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ†"
                    android:textSize="100sp"
                    android:shadowColor="#00ffff"
                    android:shadowRadius="30" />

                <!-- Mission Complete Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MISSION"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="#00ffff"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:shadowColor="#00ffff"
                    android:shadowRadius="20"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPLETE"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="#00ff88"
                    android:fontFamily="sans-serif-condensed"
                    android:letterSpacing="0.15"
                    android:shadowColor="#00ff88"
                    android:shadowRadius="20"
                    android:layout_marginTop="-8dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvCongratsMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="// SEMUA CHECKPOINT BERHASIL DITEMUKAN //"
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:fontFamily="monospace"
                    android:layout_marginTop="16dp"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!-- Stats Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#1a1f3a"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="8dp">

                <!-- Top Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00ffff"
                    android:layout_marginBottom="16dp" />

                <!-- Stats Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ GAME STATISTICS ]"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#00ffff"
                    android:fontFamily="monospace"
                    android:layout_gravity="center"
                    android:shadowColor="#00ffff"
                    android:shadowRadius="8" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Total Checkpoints -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">> "
                        android:textSize="14sp"
                        android:textColor="#00ffff"
                        android:fontFamily="monospace" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="TOTAL CHECKPOINT"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/tvTotalCheckpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#00ffff"
                        android:fontFamily="monospace"
                        android:shadowColor="#00ffff"
                        android:shadowRadius="8" />
                </LinearLayout>

                <!-- Total Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">> "
                        android:textSize="14sp"
                        android:textColor="#00ff88"
                        android:fontFamily="monospace" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="TOTAL SCORE"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/tvTotalScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#00ff88"
                        android:fontFamily="monospace"
                        android:shadowColor="#00ff88"
                        android:shadowRadius="8" />
                </LinearLayout>

                <!-- Time Taken -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">> "
                        android:textSize="14sp"
                        android:textColor="#ff00ff"
                        android:fontFamily="monospace" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="TIME ELAPSED"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/tvTimeTaken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:32"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#ff00ff"
                        android:fontFamily="monospace"
                        android:shadowColor="#ff00ff"
                        android:shadowRadius="8" />
                </LinearLayout>

                <!-- Bottom Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#00ff88"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <!-- Motivational Text -->
            <TextView
                android:id="@+id/tvMotivation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[ KAMU ADALAH HUNTER SEJATI ]"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:layout_marginTop="24dp"
                android:letterSpacing="0.1" />

            <!-- Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp">

                <!-- Play Again Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Button Glow -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="#00ffff"
                        android:alpha="0.2" />

                    <Button
                        android:id="@+id/btnPlayAgain"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="â–¶ PLAY AGAIN"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#0a0e27"
                        android:background="#00ffff"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.1"
                        android:elevation="8dp"
                        android:stateListAnimator="@null" />
                </RelativeLayout>

                <!-- Back to Menu Button -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <!-- Border Effect -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentTop="true"
                        android:background="#ff00ff"
                        android:alpha="0.6" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="#ff00ff"
                        android:alpha="0.6" />

                    <Button
                        android:id="@+id/btnBackToMenu"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="&lt;&lt; BACK TO MENU"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00ff"
                        android:background="#1a1f3a"
                        android:fontFamily="sans-serif-condensed"
                        android:letterSpacing="0.1"
                        android:elevation="4dp"
                        android:stateListAnimator="@null" />
                </RelativeLayout>

                <!-- Share Button -->
                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="[ SHARE RESULT ]"
                    android:textSize="14sp"
                    android:textColor="#00ff88"
                    android:background="@android:color/transparent"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <!-- Footer Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ STATUS: WINNER ]"
                    android:textSize="10sp"
                    android:textColor="#00ff88"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textSize="10sp"
                    android:textColor="#666666"
                    android:fontFamily="monospace" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Corner Decorations -->
    <!-- Top Left -->
    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="#00ffff"
        android:alpha="0.8" />

    <View
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="#00ffff"
        android:alpha="0.8" />

    <!-- Top Right -->
    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#ff00ff"
        android:alpha="0.8" />

    <View
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#ff00ff"
        android:alpha="0.8" />

    <!-- Bottom Left -->
    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="#00ff88"
        android:alpha="0.8" />

    <View
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="#00ff88"
        android:alpha="0.8" />

    <!-- Bottom Right -->
    <View
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="#ff00ff"
        android:alpha="0.8" />

    <View
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="#ff00ff"
        android:alpha="0.8" />

</RelativeLayout>